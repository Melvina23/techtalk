<odoo>
    <!--    wizard report-->

      <record id="wizard_report_form_view" model="ir.ui.view">
            <field name="name">fees.report.form</field>
            <field name="model">fees.report</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="date_from"/>
                        </group>
                        <group>
                            <field name="date_to"/>
                        </group>
                    </group>
                    <footer>
                        <button string="Print PDF" name="print_pdf" type="object" class="oe_highlight"/>
                        <button string="Print XLSX" name="print_xlsx" type="object" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

    <record id="wizard_report_action" model="ir.actions.act_window">
            <field name="name">Fees Report</field>
            <field name="res_model">fees.report</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_report_form_view"/>
            <field name="target">new</field>
        </record>

</odoo>