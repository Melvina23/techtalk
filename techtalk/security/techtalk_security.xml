<odoo>
    <data>

          <!-- Category -->
        <record id="techtalk_category" model="ir.module.category">
            <field name="name">Techtalk</field>
            <field name="sequence">30</field>
        </record>

        <!-- Groups -->
        <record id="instructor_group" model="res.groups">
            <field name="name">Instructor</field>
            <field name="category_id" ref="techtalk.techtalk_category"/>
        </record>

        <record id="student_group" model="res.groups">
            <field name="name">Student</field>
            <field name="category_id" ref="techtalk.techtalk_category"/>
        </record>

        <!--Record Rule-->
        <record id="instructor_table_rule" model="ir.rule">
            <field name="name">Instructor:Instructor</field>
            <field name="model_id" ref="model_tech_instructor"/>
            <field name="domain_force">[('id', '=', user.inst_id.id)]</field>
            <field name="groups" eval="[(4, ref('techtalk.instructor_group'))]"/>
        </record>

        <record id="student_table_rule" model="ir.rule">
            <field name="name">Student:Student</field>
            <field name="model_id" ref="model_tech_student"/>
            <field name="domain_force">[('id', '=',user.stud_id.id)]</field>
            <field name="groups" eval="[(4, ref('techtalk.student_group'))]"/>
        </record>

    </data>
</odoo>