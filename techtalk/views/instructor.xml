<odoo>
    <data>
        <!--form-->
        <record id="tech_instructor_form" model="ir.ui.view">
            <field name="name">tech.instructor.form</field>
            <field name="model">tech.instructor</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <group>
                            <group string="instructor details">
                                <field name="ref_no" invisible="1"/>
                                <field name="name"/>
                                <field name="dob"/>
                                <field name="gender"/>
                                <field name="email"/>
                                <field name="phone"/>
                            </group>
                            <group string="address details">
                                <field name="street"/>
                                <field name="city"/>
                                <field name="district_id"/>
                                <field name="state_id"/>
                                <field name="country_id"/>
                                <field name="zipcode"/>
                            </group>
                            <notebook>
                                <page string="Student">
                                    <field name="stud_ids">
                                        <tree edit="0" unlink="0" create="0">
                                            <field name="name"/>
                                            <field name="dob"/>
                                            <field name="gender"/>
                                            <field name="email"/>
                                            <field name="phone"/>
                                       </tree>
                                    </field>
                                </page>
                            </notebook>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!--tree-->
        <record id="tech_instructor_tree" model="ir.ui.view">
            <field name="name">tech.instructor.tree</field>
            <field name="model">tech.instructor</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="ref_no"/>
                    <field name="dob" optional="hide"/>
                    <field name="gender" optional="hide"/>
                    <field name="email" optional="hide"/>
                    <field name="phone" optional="hide"/>
                    <field name="district_id" optional="hide"/>
                    <field name="state_id" optional="hide"/>
                    <field name="country_id" optional="hide"/>
                </tree>
            </field>
        </record>

        <!-- kanban -->
        <record id="view_tech_instructor_kanban" model="ir.ui.view">
            <field name="name">tech.instructor.kanban</field>
            <field name="model">tech.instructor</field>
            <field name="arch" type="xml">
                <kanban>
                    <field name="name"/>
                    <field name="ref_no"/>
                    <field name="gender"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_record_has_image_fill">
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <div class="o_kanban_image">
                                            <field name="image" widget="image"/>
                                        </div>
                                    </div>
                                </div>
                                <div class="oe_kanban_details">
                                    <ul style="text-align:Left;">
                                        <li>
                                            <b><field name="name"/></b>
                                        </li>
                                        <li><b>Reference:</b>
                                            <field name="ref_no"/>
                                        </li>
                                        <li><b>Gender:</b>
                                            <field name="gender"/>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!--action-->
        <record id="tech_instructor_action" model="ir.actions.act_window">
            <field name="name">Instructor</field>
            <field name="res_model">tech.instructor</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create New Record.
                </p>
            </field>
        </record>

    </data>
</odoo>
